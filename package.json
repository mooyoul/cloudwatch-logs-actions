{
  "name": "cloudwatch-logs-actions",
  "version": "0.1.0",
  "description": "GitHub action that integrates with Amazon CloudWatch Logs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "jest",
    "prebuild": "npm run clean",
    "build": "ncc build src/index.ts -o dist",
    "lint": "tslint '{src,test}/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mooyoul/cloudwatch-logs-actions.git"
  },
  "keywords": [
    "github-actions",
    "cloudwatch-logs",
    "typescript"
  ],
  "author": "MooYeol Prescott Lee <mooyoul@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mooyoul/cloudwatch-logs-actions/issues"
  },
  "homepage": "https://github.com/mooyoul/cloudwatch-logs-actions#readme",
  "devDependencies": {
    "@prescott/commitlint-preset": "1.0.3",
    "@prescott/tslint-preset": "1.0.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@types/chai": "4.2.21",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.9",
    "@types/sinon": "10.0.2",
    "@zeit/ncc": "0.22.3",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "semantic-release": "17.4.4",
    "sinon": "11.1.2",
    "ts-jest": "27.0.4",
    "ts-node": "10.2.0",
    "tslint": "6.1.3",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/exec": "^1.0.4",
    "async-sema": "^3.1.0",
    "aws-sdk": "^2.703.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@prescott/commitlint-preset"
    ]
  }
}
